<!doctype html>
<html class="no-js" lang="">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Skopos:Transcribe</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="apple-touch-icon.png">
    <!-- Place favicon.ico in the root directory -->
    <link href='http://fonts.googleapis.com/css?family=Oxygen' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="../css/normalize.css">
    <link rel="stylesheet" href="../css/mainsolo.css">
    <script src="../js/vendor/modernizr-2.8.3.min.js"></script>
</head>
<body>
        <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
            <![endif]-->
            <div class="toolbox">
                <div class="tool">
                    <i id="download" class="fa fa-download fa-2x"></i>
                </div>
                <div class="tool">
                    <div  id="settings" class="settings fa fa-cog fa-2x"></div>
                </div>
                <div class="tool">
                    <i  id="youtube" class="youtube fa fa-youtube  fa-2x"></i>
                    <div id="youtube_URL" class="visibility">
                        <div class="tool info_youtube">
                            <i  id="youtube_ingreso" title="Play - Click Me !!" class="youtube fa fa-youtube-play fa-2x"></i>
                            <input type="text" id="url" placeholder="Ingresar URL">
                        </div>
                    </div>
                </div>
                <div class="tool">
                    <!-- TODO: Do not show save to anonymous user, or ask for login -->
                    <div id="save" class="save fa fa-floppy-o fa-2x"></div>
                </div>
                <div class="tool">
                    <div id="trash" class="trash fa fa-trash-o fa-2x"></div>
                </div>
            </div>

            <div class="center">
                <div class="videoContainer">
                    <div  class="videoTitle">
                        <h1 class="huge">
                            <div id="title_video" > <%= titulo %> </div> 
                        </h1>
                    </div>
                    <div class="videoMedia">
                        <iframe id="player" width="560" height="315" src="https://www.youtube.com/embed/<%= idVideo %>?enablejsapi=1&theme=light&showinfo=0" frameborder="0" allowfullscreen></iframe>
                    </div>
                </div>
                <div class="currentInput inputContainer" contenteditable="true" spellcheck="false">
                    <div class="placeholder">Start typing here!</div>
                </div>
                <div id="update">
                    <div class="prevInput"></div>
                </div>
                

                <div class="stats">
                    <div class="scoreContainer">
                        <div class="scoreContent">
                            <div class="scoreText">Score</div>
                            <div id="score" class="score">0</div>
                        </div>
                    </div>
                    <div class="scoreContainer">
                        <div class="scoreContent">
                            <div class="scoreText">CPM</div>
                            <div id="CPM" class="score">0</div>
                        </div>
                    </div>
                </div>
            </div>
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-alpha1/jquery.min.js"></script>
            <script src="../js/plugins.js"></script>
            <script src="../js/singleplayer.js"></script>
            <script src="../js/userinput.js"></script>
            <script src="../js/editor.js"></script>
            <script src="../js/ytplayer.js"></script>
            <script src="../js/efectInput.js"></script>
            <script src="../js/srtFormatter.js"></script>
            <script src="../js/formatter.js"></script>
            <script src="../js/tools.js"></script>
            <script src="../js/youtubeParserVideo.js"></script>
            <script src="../js/characterCounter.js"></script>
        </body>
        </html>
